<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personFNameTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center|center_vertical"
            android:textSize="20dp"
            android:text="FIRST NAME">
        </TextView>

        <TextView
            android:id="@+id/personFNameSubscriptTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center_horizontal|center"
            android:textSize="15dp"
            android:text="First Name">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/personLNameTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center|center_vertical"
            android:textSize="20dp"
            android:text="LAST NAME">
        </TextView>

        <TextView
            android:id="@+id/personLNameSubscriptTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center_horizontal|center"
            android:textSize="15dp"
            android:text="Last Name">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/personGenderTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center|center_vertical"
            android:textSize="20dp"
            android:text="GENDER">
        </TextView>

        <TextView
            android:id="@+id/personGenderSubscriptTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center_horizontal|center"
            android:textSize="15dp"
            android:text="Gender">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <ExpandableListView
            android:id="@+id/personExpandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            tools:context=".view.MainActivity" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>